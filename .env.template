# Environment Configuration Template
# Copy this file to .env and customize for your environment

# ===============================================
# BASIC CONFIGURATION
# ===============================================

# Application Environment
ENVIRONMENT=development  # development, staging, production
NODE_ENV=development

# Application URLs
APP_NAME=Oatie
APP_VERSION=1.0.0
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5174

# ===============================================
# DATABASE CONFIGURATION
# ===============================================

# SQLite (for development)
DATABASE_URL=sqlite:///./oatie.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/oatie

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ===============================================
# AI/LLM CONFIGURATION
# ===============================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.1
OPENAI_TIMEOUT=30

# LLM Fallback Configuration
LLM_FALLBACK_ENABLED=true
LLM_RETRY_ATTEMPTS=3
LLM_CACHE_TTL=3600

# ===============================================
# SECURITY CONFIGURATION
# ===============================================

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_long_and_random
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration
CORS_ORIGINS=http://localhost:5174,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600

# ===============================================
# ORACLE CONFIGURATION
# ===============================================

# Oracle Database Connection (Optional - for testing)
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=XE
ORACLE_USERNAME=your_oracle_username
ORACLE_PASSWORD=your_oracle_password

# Oracle Connection Pool
ORACLE_POOL_MIN=1
ORACLE_POOL_MAX=10
ORACLE_POOL_INCREMENT=2

# ===============================================
# LOGGING CONFIGURATION
# ===============================================

# Log Level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Log Format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log Files
LOG_FILE=logs/oatie.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Structured Logging
STRUCTURED_LOGGING=true
LOG_JSON_FORMAT=true

# ===============================================
# PERFORMANCE CONFIGURATION
# ===============================================

# Query Configuration
MAX_QUERY_LENGTH=1000
QUERY_TIMEOUT=30
MAX_RESULTS_PER_QUERY=1000

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ===============================================
# MONITORING CONFIGURATION
# ===============================================

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_METRICS=true

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Application Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=oatie
APM_ENVIRONMENT=development

# ===============================================
# DEVELOPMENT CONFIGURATION
# ===============================================

# Debug Settings
DEBUG=false
DEBUG_SQL=false
DEBUG_QUERIES=false

# Development Tools
HOT_RELOAD=true
AUTO_RELOAD=true
RELOAD_INCLUDES=*.py,*.html,*.css,*.js

# Testing
TEST_DATABASE_URL=sqlite:///./test_oatie.db
TEST_PARALLELISM=4

# ===============================================
# PRODUCTION CONFIGURATION
# ===============================================

# Production Security
SECURE_COOKIES=true
HTTPS_ONLY=true
HSTS_MAX_AGE=31536000

# Production Performance
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEP_ALIVE=2

# Production Monitoring
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here

# ===============================================
# DOCKER CONFIGURATION
# ===============================================

# Docker Settings
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Container Resources
BACKEND_CPU_LIMIT=1.0
BACKEND_MEMORY_LIMIT=512m
FRONTEND_CPU_LIMIT=0.5
FRONTEND_MEMORY_LIMIT=256m

# ===============================================
# GITHUB PRO FEATURES
# ===============================================

# GitHub Actions
GITHUB_TOKEN=your_github_token_here
GITHUB_REPOSITORY=username/oatie

# Container Registry
CONTAINER_REGISTRY=ghcr.io
CONTAINER_REGISTRY_USERNAME=your_github_username
CONTAINER_REGISTRY_TOKEN=your_github_token

# Advanced Security
SECURITY_SCANNING_ENABLED=true
DEPENDABOT_ENABLED=true
CODEQL_ENABLED=true

# ===============================================
# EXTERNAL SERVICES
# ===============================================

# Email Configuration (for notifications)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@oatie.ai

# Slack Integration (for notifications)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#oatie-alerts

# Cloud Storage (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=oatie-files
AWS_REGION=us-east-1

# ===============================================
# FEATURE FLAGS
# ===============================================

# Feature Toggles
FEATURE_ORACLE_INTEGRATION=true
FEATURE_AI_SUGGESTIONS=true
FEATURE_QUERY_HISTORY=true
FEATURE_DASHBOARD_ANALYTICS=true
FEATURE_EXPORT_FUNCTIONALITY=true
FEATURE_USER_MANAGEMENT=false
FEATURE_MULTI_TENANT=false

# Experimental Features
EXPERIMENTAL_FEATURES=false
BETA_FEATURES=false
