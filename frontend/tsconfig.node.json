{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vite/client"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["vite.config.ts"]
}
