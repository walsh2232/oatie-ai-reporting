# Development Environment Configuration
# Copy from .env.example and customize for local development

# Application Settings
DEBUG=true
PORT=8000
WORKERS=1

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/oatie_ai_dev
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Cache Configuration  
REDIS_URL=redis://localhost:6379/0
REDIS_CLUSTER_MODE=false
CACHE_TTL_DEFAULT=300
CACHE_TTL_REPORTS=180
CACHE_TTL_QUERIES=600

# Security Configuration
SECRET_KEY=dev-secret-key-not-for-production-12345678901234567890
ENCRYPTION_KEY=dev-encryption-key-not-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# SSO Configuration (disabled for dev)
SSO_ENABLED=false

# CORS Configuration (allow all for development)
CORS_ORIGINS=*
ALLOWED_HOSTS=*

# Oracle BI Publisher Integration (Mock for development)
ORACLE_BI_ENABLED=true
ORACLE_BI_URLS=http://localhost:9502,http://localhost:9503
ORACLE_BI_USERNAME=oatie_dev_user
ORACLE_BI_PASSWORD=dev_password_123
ORACLE_BI_TIMEOUT=30
ORACLE_BI_POOL_SIZE=10
ORACLE_BI_CACHE_TTL=300

# Enterprise Security (disabled for dev)
ORACLE_IDCS_ENABLED=false
ORACLE_SSO_ENABLED=false

# CDN Configuration (disabled for dev)
CDN_ENABLED=false

# Webhook Configuration
WEBHOOK_SIGNING_SECRET=dev-webhook-secret-not-for-production

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1

# Development specific
PYTHONPATH=/workspaces/oatie-ai-reporting
