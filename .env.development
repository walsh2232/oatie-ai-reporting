# Oatie AI Platform - Development Environment Configuration

# Application Settings
NODE_ENV=development
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:///./oatie_dev.db
DB_TYPE=sqlite

# Security Keys (Development Only - Not for Production)
SECRET_KEY=dev_secret_key_not_for_production_use_only
JWT_SECRET_KEY=dev_jwt_secret_key_not_for_production_use_only
ENCRYPTION_KEY=dev_encryption_key_not_for_production

# Redis Configuration (Optional for development)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Oracle BI Publisher Integration (Development/Mock)
ORACLE_BI_ENABLED=false
ORACLE_BI_URLS=http://localhost:9502
ORACLE_BI_USERNAME=dev_user
ORACLE_BI_PASSWORD=dev_password
ORACLE_BI_TIMEOUT=10
ORACLE_BI_POOL_SIZE=5
ORACLE_BI_CACHE_TTL=60

# Oracle Integration (Development)
ORACLE_IDCS_ENABLED=false
ORACLE_SSO_ENABLED=false

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000/api/v1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# Development Features
RELOAD=true
HOT_RELOAD=true
AUTO_MIGRATION=true

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Performance Configuration
ASYNC_WORKERS=2
WORKER_TIMEOUT=120

# Feature Flags (Development)
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_AI_TEMPLATES=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_AUDIT_LOGGING=false
FEATURE_MFA=false
FEATURE_RBAC=false

# Development Tools
PROFILING=true
DEBUG_TOOLBAR=true
SQL_ECHO=false
