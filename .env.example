# Environment configuration file for enterprise deployment
# Application Settings
DEBUG=false
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/oatie_ai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CLUSTER_MODE=false
CACHE_TTL_DEFAULT=3600
CACHE_TTL_REPORTS=1800
CACHE_TTL_QUERIES=7200

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production-32-chars-minimum
ENCRYPTION_KEY=your-encryption-key-must-be-32-characters-long
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# SSO Configuration (optional)
SSO_ENABLED=false
OAUTH2_CLIENT_ID=your-oauth2-client-id
OAUTH2_CLIENT_SECRET=your-oauth2-client-secret
SAML_METADATA_URL=https://your-identity-provider.com/metadata

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://app.oatie.com
ALLOWED_HOSTS=*

# Oracle BI Publisher Integration
ORACLE_BI_URL=http://localhost:9502/xmlpserver
ORACLE_BI_USERNAME=your-oracle-bi-username
ORACLE_BI_PASSWORD=your-oracle-bi-password
ORACLE_BI_TIMEOUT=30

# CDN Configuration (optional)
CDN_ENABLED=false
CDN_BASE_URL=https://cdn.oatie.com
STATIC_FILES_CACHE_TTL=86400

# Webhook Configuration
WEBHOOK_SIGNING_SECRET=your-webhook-signing-secret-change-in-production

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring
MONITORING_ENABLED=true
LOG_LEVEL=INFO

# Performance Configuration
ASYNC_WORKERS=4
CONNECTION_POOL_SIZE=100
QUERY_TIMEOUT=30
MAX_QUERY_COMPLEXITY=1000

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600