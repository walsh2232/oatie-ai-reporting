# Environment variables for production deployment
# Copy this file to .env and update the values

# Database
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=oatie_ai
POSTGRES_USER=oatie

# Redis
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# Application Security
SECRET_KEY=your_very_long_and_secure_secret_key_for_jwt_tokens
ENCRYPTION_KEY=your_32_character_encryption_key_here

# API Configuration
DEBUG=false
LOG_LEVEL=INFO
BACKEND_CORS_ORIGINS=http://localhost,https://your-domain.com

# Oracle BI Publisher (optional)
ORACLE_BI_SERVER=your-oracle-bi-server.com
ORACLE_BI_USERNAME=your_oracle_username
ORACLE_BI_PASSWORD=your_oracle_password

# AI/ML Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=your_secure_grafana_password_here

# SSL/TLS (for production)
SSL_CERT_PATH=/etc/ssl/certs/oatie.crt
SSL_KEY_PATH=/etc/ssl/private/oatie.key

# Domain configuration
DOMAIN=localhost
EMAIL=admin@your-domain.com