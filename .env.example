# Environment Configuration for Oatie AI Reporting

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Oracle BI Publisher Configuration
ORACLE_BI_URL=https://your-oracle-bi-publisher.com
ORACLE_USERNAME=your_oracle_username
ORACLE_PASSWORD=your_oracle_password

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/oatie_db

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Application Configuration
APP_NAME=Oatie AI Reporting
APP_VERSION=2.0.0
DEBUG=true
LOG_LEVEL=INFO

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Feature Flags
ENABLE_OPENAI=true
ENABLE_ORACLE_INTEGRATION=true
ENABLE_CACHING=true
ENABLE_MONITORING=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Storage
UPLOAD_DIR=/tmp/uploads
REPORTS_DIR=/tmp/reports
MAX_FILE_SIZE_MB=100