# Oatie Backend Environment Configuration
# Copy this file to .env and configure your settings

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./oatie.db

# Oracle Database (for production use)
# ORACLE_USER=your_oracle_username
# ORACLE_PASSWORD=your_oracle_password  
# ORACLE_DSN=your_oracle_connection_string

# AI/LLM Configuration (optional - enables advanced SQL generation)
# Get your API key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=your_openai_api_key_here
# LLM_MODEL=gpt-3.5-turbo
# LLM_TEMPERATURE=0.1
# LLM_MAX_TOKENS=500

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
