# Oatie AI Reporting Platform - Development Environment Configuration
# ====================================================================

# Application Settings
APP_NAME=Oatie AI Reporting Platform (DEV)
APP_VERSION=2.0.0-dev
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Security Configuration
SECRET_KEY=dev-secret-key-not-for-production
JWT_SECRET_KEY=dev-jwt-secret-key-not-for-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
ENCRYPTION_KEY=dev-encryption-key-32-chars-long
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:5173"]

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./oatie.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=true

# Redis Configuration (Optional for development)
REDIS_URL=redis://localhost:6379/1
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=5

# Oracle Fusion Configuration (Development)
ORACLE_FUSION_URL=https://dev-oracle-fusion.example.com
ORACLE_USERNAME=dev_user
ORACLE_PASSWORD=dev_password
ORACLE_CLIENT_ID=dev_client_id
ORACLE_CLIENT_SECRET=dev_client_secret
ORACLE_BI_PUBLISHER_URL=https://dev-bi-publisher.example.com

# AI/ML Configuration
OPENAI_API_KEY=sk-dev-your-openai-api-key-here
ANTHROPIC_API_KEY=dev-your-anthropic-api-key-here
NLP_MODEL_ENDPOINT=http://localhost:8080/nlp
MAX_QUERY_COMPLEXITY=5
ENABLE_QUERY_CACHING=false

# Security & Compliance (Relaxed for development)
ENABLE_AUDIT_LOGGING=true
ENABLE_DATA_ENCRYPTION=false
ENABLE_MFA=false
SESSION_TIMEOUT_MINUTES=120
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION_MINUTES=5

# Performance & Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENDPOINT=/health
REQUEST_TIMEOUT_SECONDS=60
MAX_CONCURRENT_REQUESTS=20

# File Upload & Storage
MAX_FILE_SIZE_MB=50
UPLOAD_DIRECTORY=./uploads
TEMP_DIRECTORY=./temp
CLEANUP_TEMP_FILES_HOURS=6

# Email Configuration (Development - use local testing)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=dev@oatie.local

# Backup Configuration (Disabled for development)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=./backups

# Rate Limiting (Relaxed for development)
RATE_LIMIT_REQUESTS_PER_MINUTE=300
RATE_LIMIT_BURST=50

# External Service Timeouts
ORACLE_API_TIMEOUT_SECONDS=30
DATABASE_QUERY_TIMEOUT_SECONDS=60
AI_MODEL_TIMEOUT_SECONDS=90
