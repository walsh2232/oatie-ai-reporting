# Oatie AI Platform - Production Environment Configuration
# Configure these values for your production environment

# Application Settings
NODE_ENV=production
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://oatie_user:secure_db_password@postgres:5432/oatie_production
DB_HOST=postgres
DB_PORT=5432
DB_NAME=oatie_production
DB_USER=oatie_user
DB_PASSWORD=secure_db_password
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Security Keys (CHANGE THESE IN PRODUCTION)
SECRET_KEY=your_super_secure_secret_key_change_this_in_production_min_32_chars
JWT_SECRET_KEY=your_jwt_secret_key_change_this_in_production_min_32_chars
ENCRYPTION_KEY=your_encryption_key_change_this_in_production_min_32_chars

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=100

# Oracle BI Publisher Integration
ORACLE_BI_ENABLED=true
ORACLE_BI_URLS=http://oracle-bi-1.company.com:9502,http://oracle-bi-2.company.com:9502
ORACLE_BI_USERNAME=oatie_service_user
ORACLE_BI_PASSWORD=secure_oracle_password
ORACLE_BI_TIMEOUT=30
ORACLE_BI_POOL_SIZE=50
ORACLE_BI_MAX_CONNECTIONS=100
ORACLE_BI_CACHE_TTL=300
ORACLE_BI_ENABLE_AUDIT=true

# Oracle Identity Cloud Service (IDCS)
ORACLE_IDCS_ENABLED=false
ORACLE_IDCS_TENANT=your_company
ORACLE_IDCS_CLIENT_ID=your_idcs_client_id
ORACLE_IDCS_CLIENT_SECRET=your_idcs_client_secret
ORACLE_IDCS_SCOPE=urn:opc:idm:__myscopes__

# Oracle SSO Configuration
ORACLE_SSO_ENABLED=false
ORACLE_SAML_METADATA_URL=https://your-company.okta.com/app/metadata
ORACLE_SAML_ENTITY_ID=oatie-ai-platform
ORACLE_OIDC_DISCOVERY_URL=https://your-idcs-tenant.identity.oraclecloud.com/.well-known/openid_configuration

# Oracle Fusion Cloud (Legacy - for backwards compatibility)
ORACLE_FUSION_URL=https://your-company.oraclecloud.com
ORACLE_FUSION_USERNAME=fusion_user
ORACLE_FUSION_PASSWORD=fusion_password

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000/api/v1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
CORS_CREDENTIALS=true

# Session Configuration
SESSION_TIMEOUT=3600
SESSION_SECRET=your_session_secret_change_this_in_production

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/app/uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@company.com
SMTP_PASSWORD=your_email_password
SMTP_TLS=true

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Performance Configuration
ASYNC_WORKERS=4
WORKER_TIMEOUT=300
KEEP_ALIVE_TIMEOUT=65

# Security Configuration
SECURITY_HEADERS=true
RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=100

# SSL/TLS Configuration (when using HTTPS)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/oatie.crt
SSL_KEY_PATH=/etc/ssl/private/oatie.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/oatie.log
LOG_ROTATION=daily
LOG_MAX_SIZE=100MB

# Cache Configuration
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE=1GB
CACHE_EVICTION_POLICY=LRU

# Feature Flags
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_AI_TEMPLATES=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_AUDIT_LOGGING=true
FEATURE_MFA=true
FEATURE_RBAC=true

# Docker Configuration
COMPOSE_PROJECT_NAME=oatie-production
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest

# Deployment Configuration
DEPLOYMENT_ENV=production
DEPLOYMENT_VERSION=3.0.0
DEPLOYMENT_TIMESTAMP=2025-08-25T15:30:00Z
