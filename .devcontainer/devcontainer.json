{
  "name": "Oatie AI Platform - Enterprise Oracle BI Publisher Integration",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "true"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18",
      "nvmVersion": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": "true"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },
  "forwardPorts": [
    3000,
    8000,
    5432,
    6379,
    9090,
    3001,
    5173
  ],
  "portsAttributes": {
    "3000": {
      "label": "Frontend (Nginx)",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "Backend API",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    },
    "9090": {
      "label": "Prometheus",
      "onAutoForward": "silent"
    },
    "3001": {
      "label": "Grafana",
      "onAutoForward": "silent"
    }
  },
  "postCreateCommand": ".devcontainer/setup.sh",
  "postStartCommand": ".devcontainer/start-services.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "ms-python.isort",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode-remote.remote-containers",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "humao.rest-client",
        "ms-vscode.live-server"
      ],
      "settings": {
        "python.defaultInterpreterPath": "./backend/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "typescript.suggest.autoImports": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/node_modules": true,
          "**/.git": false
        }
      }
    }
  },
  "mounts": [
    "source=oatie-backend-venv,target=${containerWorkspaceFolder}/backend/.venv,type=volume",
    "source=oatie-node-modules,target=${containerWorkspaceFolder}/frontend/node_modules,type=volume"
  ],
  "remoteEnv": {
    "OATIE_ENV": "development",
    "PYTHONPATH": "${containerWorkspaceFolder}/backend",
    "NODE_ENV": "development"
  }
}